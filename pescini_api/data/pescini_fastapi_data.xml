<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- user -->
    <record
    id="pescini_api_user"
    model="res.users"
    context="{'no_reset_password': True, 'no_reset_password': True}">
        <field name="name">Pescini Api User</field>
        <field name="login">pescini_api_user</field>
        <field
        name="groups_id"
        eval="[(6, 0, [])]" />
    </record>
    <!-- group -->
    <record
    id="pescini_api_group"
    model="res.groups">
        <field name="name">Pescini Api Group</field>
        <field
        name="users"
        eval="[(4, ref('pescini_api_user'))]" />
    </record>
    <!-- endpoint -->
    <record
    model="fastapi.endpoint"
    id="pescini_endpoint">
        <field name="name">Pescini</field>
        <field name="description"><![CDATA[
# Pescini API
]]></field>
        <field name="app">pescini</field>
        <field name="root_path">/pescini</field>
        <field
        name="user_id"
        ref="pescini_api_user" />
    </record>
</odoo>
