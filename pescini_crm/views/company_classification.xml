<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view -->
    <record id="company_classification_view_form" model="ir.ui.view">
      <field name="name">Company Classification Form</field>
      <field name="model">company.classification</field>
      <field name="arch" type="xml">
        <form string="Company Classification Form">
            <sheet>
                
                <group>
                    <group>
                        <field name="name" class="oe_inline"/>
                        <field name="company_type"/>
                    </group>
                </group>
            </sheet>
        </form>
      </field>
    </record> 

    <!-- Tree(list) View -->
    <record id="company_classification_view_tree" model="ir.ui.view">
        <field name="name">Company Classification Tree</field>
        <field name="model">company.classification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_type"/>
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="company_classification_view_search" model="ir.ui.view" >
        <field name="name">Company Classification Search</field>
        <field name="model">company.classification</field>
        <field name="arch" type="xml">
            <search string="Company Classification Search">
                <field name="name"/>
                <field name="company_type"/>
            </search>
        </field>
    </record>

    <!-- actions and menus -->
    
    <record id="company_classification_view_action" model="ir.actions.act_window">
        <field name="name">Company Classification</field>
        <field name="res_model">company.classification</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Company Classification" 
              id="company_classification_menu" 
              parent="contacts.res_partner_menu_config" 
              action="company_classification_view_action"/>
</odoo>