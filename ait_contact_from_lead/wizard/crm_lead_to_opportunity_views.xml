<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Task PES-27 -->
    <record id="view_crm_lead2opportunity_partner_inherit" model="ir.ui.view">
        <field name="name">crm.lead2opportunity.partner.form.inherit</field>
        <field name="model">crm.lead2opportunity.partner</field>
        <field name="inherit_id" ref="crm.view_crm_lead2opportunity_partner"/>
        <field name="arch" type="xml">
            <xpath expr="//group[4]/group[1]" position="after">
                <group col="2" attrs="{'invisible': [('action','!=','both')], 'required':[('action', '=','both')]}">
                    <group>
                        <field name="partner_id" attrs="{'invisible': [('action','!=','both')], 'required':[('action', '=','both')]}"
                               context="{'res_partner_search_mode': 'customer'}" />
                        <field name="company_id" attrs="{'invisible': [('action','!=','both')], 'required':[('action', '=','both')]}"
                               context="{'res_partner_search_mode': 'customer'}" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
